datasource db {
  provider = "mysql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @default(autoincrement()) @id
  email     String  @unique
  firstname String?
  lastname  String
}

model Product {
  id             Int          @default(autoincrement()) @id
  name           String
  description    String
  price          Float
  imageUrl       String
  ProductBrand   ProductBrand @relation(fields: [productBrandId], references: [id])
  productBrandId Int
  productType    ProductType  @relation(fields: [productTypeId], references: [id])
  productTypeId  Int
}

model ProductBrand {
  id      Int       @default(autoincrement()) @id
  name    String
  Product Product[]
}

model ProductType {
  id      Int       @default(autoincrement()) @id
  name    String
  Product Product[]
}
